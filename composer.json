{
    "name": "wenbinye/tars-skeleton",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "vlucas/phpdotenv": "^5.0",
        "wenbinye/tars": "^0.1"
    },
    "require-dev": {
        "kuiper/component-installer": "^0.1",
        "mockery/mockery": "^1.3",
        "phpunit/dbunit": "^4.0",
        "phpunit/phpunit": "^7.0",
        "roave/security-advisories": "dev-master",
        "wenbinye/tars-gen": "^0.1"
    },
    "autoload": {
        "psr-4": {
            "winwin\\tars\\file\\": "src/"
        }
    },
    "scripts": {
        "package": "wenbinye\\tars\\server\\ServerApplication::package",
        "container-config": "kuiper\\component\\ComponentInstaller::generate",
        "gen": "./vendor/bin/tars-gen",
        "serve": "@php src/index.php --config config.conf"
    },
    "extra": {
        "kuiper": {
            "config-file": "src/container.php",
            "whitelist": [
                "wenbinye/tars"
            ],
            "blacklist": [
                "kuiper/kuiper"
            ],
            "configuration": [
                "kuiper\\db\\DbConfiguration"
                ]
        },
        "tars": {
            "manifest": [
                "composer.json",
                {
                    "in": "src"
                },
                {
                    "followLinks": true,
                    "exclude": [
                        "phpunit",
                        "symfony/finder",
                        "php-cs-fixer",
                        "mockery",
                        "hamcrest",
                        "kuiper/vendor",
                        "tars/vendor",
                        "tars-gen"
                    ],
                    "in": "vendor"
                }
            ],
            "serverName": "TarsFileRegistryServer"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "winwin\\tars\\file\\": "tests/"
        }
    }
}
